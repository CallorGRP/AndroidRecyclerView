<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.thdev.androidrecyclerview">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.basic.BasicActivity"
            android:label="@string/label_activity_basic"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.image.ImageListActivity"
            android:label="@string/label_activity_image"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.custom_scroll.basic.BasicCustomScrollActivity"
            android:label="@string/label_activity_custom_scroll_image"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.header_footer.basic.ImageHFActivity"
            android:label="@string/label_activity_header_footer_sample"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name=".view.custom_scroll.header_footer.CustomScrollHeaderFooterActivity"
            android:label="@string/label_activity_custom_scroll_image_header_footer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="tech.thdev.androidrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>